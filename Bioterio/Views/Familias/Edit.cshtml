@model Bioterio.Models.Familia

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Familia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFamilia" />
            <div class="form-group">
                <label asp-for="NomeFamilia" class="control-label"></label>
                <input asp-for="NomeFamilia" class="form-control" />
                <span asp-validation-for="NomeFamilia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrupoIdGrupo" class="control-label"></label>
                <select asp-for="GrupoIdGrupo" class="form-control" asp-items="ViewBag.GrupoIdGrupo"></select>
                <span asp-validation-for="GrupoIdGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Confirmar" class="btn btn-default" /> |
                <a type="button" class="btn btn-info" asp-action="Index">Cancelar</a>
            </div>
            <input type="hidden" asp-for="GrupoIdGrupo" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
