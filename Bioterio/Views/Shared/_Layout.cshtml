<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bioterio</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/js/jquery.js"></script>
    </environment>
</head>
<body>
    <div class="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                        <div class="logo"></div>
                    </a>
                </div>
                <ul>
                    <li>
                        <a>Lotes</a>
                        <ul>
                            <li><a asp-area="" asp-controller="Lotes" asp-action="Index">Lotes</a></li>
                            <li><a asp-area="" asp-controller="RegNovosAnimais" asp-action="Index">Registo de Novos Animais</a></li>
                        </ul>
                    </li>
                    <li>
                        <a>Tanques</a>
                        <ul>
                            <li><a asp-area="" asp-controller="CircuitoTanques" asp-action="Index">Circuito de Tanques</a></li>
                            <li><a asp-area="" asp-controller="PlanoAlimentars" asp-action="Index">Planos Alimentares</a></li>
                            <li><a asp-area="" asp-controller="Tanques" asp-action="Index">Tanques</a></li>
                        </ul>
                    </li>
                    <li>
                        <a>Projectos</a>
                        <ul>
                            <li><a asp-area="" asp-controller="Projetoes" asp-action="Index">Projectos</a></li>
                            <li><a asp-area="" asp-controller="Elementoequipas" asp-action="Index">Equipas</a></li>
                            <li><a asp-area="" asp-controller="Ensaios" asp-action="Index">Ensaios</a></li>
                        </ul>
                    </li>
                    <li>
                        <a>Configurações</a>
                        <ul>
                            <li>
                                <a>Espécies</a>
                                <ul>
                                    <li><a asp-area="" asp-controller="Especies" asp-action="Index">Espécies</a></li>
                                    <li><a asp-area="" asp-controller="Familias" asp-action="Index">Famílias</a></li>
                                    <li><a asp-area="" asp-controller="Grupos" asp-action="Index">Grupos</a></li>
                                </ul>
                            </li>
                            <li>
                                <a>Registos</a>
                                <ul>
                                    <li><a asp-area="" asp-controller="RegAlimentars" asp-action="Index">Registos alimentares</a></li>
                                    <li><a asp-area="" asp-controller="RegRemocoes" asp-action="Index">Registo de Remoções</a></li>
                                    <li><a asp-area="" asp-controller="RegAmostragens" asp-action="Index">Registos de amostragens</a></li>
                                    <li><a asp-area="" asp-controller="RegCondAmbs" asp-action="Index">Registo de condições ambientais</a></li>
                                    <li><a asp-area="" asp-controller="RegManutencaos" asp-action="Index">Registo de manutencões</a></li>
                                    <li><a asp-area="" asp-controller="RegTratamentoes" asp-action="Index">Registo de tratamentos</a></li>
                                    <li><a asp-area="" asp-controller="Motivoes" asp-action="Index">Motivos de remoções</a></li>
                                </ul>
                            </li>
                            <li>
                                <a>Funcionários</a>
                                <ul>
                                    <li><a asp-area="" asp-controller="AgenteTrats" asp-action="Index">Agente de tratamento</a></li>
                                    <li><a asp-area="" asp-controller="CircuitoTanques" asp-action="Index">Circuito de tanques</a></li>
                                    <li><a asp-area="" asp-controller="Elementoequipas" asp-action="Index">Equipas</a></li>
                                    <li><a asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionarios</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="col-sm-3 nav navbar-nav pull-right">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <div class="footer-container">
                <footer></footer>
            </div>
        </div>

        <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>