@model Bioterio.Models.UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Funcionario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFuncionario" />
            <div class="form-group">
                <label asp-for="NomeCompleto" class="control-label">Nome Completo</label>
                <input asp-for="NomeCompleto" class="form-control" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Nome Utilizador</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permissions" class="control-label"></label>
                <br />
                @Html.RadioButtonFor(b => b.Permissions, Bioterio.Authorization.ApplicationUserManager.Constants.AdministratorsRole) Administradores
                @Html.RadioButtonFor(b => b.Permissions, Bioterio.Authorization.ApplicationUserManager.Constants.ManagersRole) Gestores
                @Html.RadioButtonFor(b => b.Permissions, "user") Utilizadores
                <span asp-validation-for="Permissions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
