@model IEnumerable<Bioterio.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Utilizadores</h2>

<p>
    <a type="button" class="btn btn-info" asp-action="Create">Criar Novo Utilizador</a>
</p>
<div class="col-md-10">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomePerfil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => item.NomePerfil)
                </td>
                <td class="text-right">
<a class="btn btn-default" asp-action="Edit" asp-route-id="@item.IdFuncionario">Editar</a> |
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.IdFuncionario">Detalhes</a> |
                    <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.IdFuncionario">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
<div class="col-md-2">
    <ul class="list-group">
        <li class="list-group-item active"><b>Utilizadores:</b></li>
        <li class="list-group-item"><a asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionários</a></li>
        <li class="list-group-item"><a asp-area="" asp-controller="Perfis" asp-action="Index">Perfis</a></li>
    </ul>
</div>