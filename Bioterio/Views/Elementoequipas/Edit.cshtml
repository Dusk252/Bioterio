@model Bioterio.Models.Elementoequipa
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Editar</h2>
<h4>Elemento de Equipa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdElementoEquipa" />
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Nome" data-content="Nome do Elemento de Equipa"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Funcao" data-content="Funcao que o elemento de equipa ira executar no Projeto"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="Funcao" class="control-label"></label>
                <input asp-for="Funcao" class="form-control" />
                <span asp-validation-for="Funcao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Projeto" data-content="Projeto onde o elemento de equipa ira trabalhar"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="ProjetoIdProjeto" class="control-label"></label>
                <select asp-for="ProjetoIdProjeto" class="form-control" asp-items="ViewBag.ProjetoIdProjeto"></select>
                <span asp-validation-for="ProjetoIdProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Confirmar" class="btn btn-default" /> |
                <a type="button" class="btn btn-info" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<script>
$(document).ready(function(){
    $('[data-toggle="popover"]').popover();
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
