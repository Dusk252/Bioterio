@model Bioterio.Models.Especie

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Especie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEspecie" />
            <div class="form-group">
                <label asp-for="NomeCient" class="control-label"></label>
                <input asp-for="NomeCient" class="form-control" />
                <span asp-validation-for="NomeCient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeVulgar" class="control-label"></label>
                <input asp-for="NomeVulgar" class="form-control" />
                <span asp-validation-for="NomeVulgar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrupoIdGrupo" class="control-label"></label>
                <select asp-for="GrupoIdGrupo" class="form-control" id="groupDropDown" asp-items="ViewBag.GrupoIdGrupo" onchange="getFamilyList()"></select>
                <span asp-validation-for="GrupoIdGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamiliaIdFamilia" class="control-label"></label>
                <select asp-for="FamiliaIdFamilia" class="form-control" id="familyDropDown" asp-items="ViewBag.FamiliaIdFamilia"></select>
                <span asp-validation-for="FamiliaIdFamilia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts {
    <script type="text/javascript">
        window.onload = function () {
            var v = $("#familyDropDown").val();
            getFamilyList(v);
        };
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

