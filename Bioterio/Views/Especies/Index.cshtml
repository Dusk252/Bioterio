@model IEnumerable<Bioterio.Models.Especie>

@{
    ViewData["Title"] = "Index";
}

<h2>Espécies</h2>

<p>
    <a type="button" class="btn btn-info" asp-action="Create">Criar Nova Espécie</a>
</p>

@if ((bool?)TempData["deleted"] == true)
{
    @await Html.PartialAsync("DeleteSuccess")
}

<div class="col-md-10">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeVulgar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamiliaIdFamiliaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamiliaIdFamiliaNavigation.GrupoIdGrupoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeVulgar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FamiliaIdFamiliaNavigation.NomeFamilia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FamiliaIdFamiliaNavigation.GrupoIdGrupoNavigation.NomeGrupo)
                </td>
                <td class="text-right">
<a class="btn btn-default" asp-action="Edit" asp-route-id="@item.IdEspecie">Editar</a> |
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.IdEspecie">Detalhes</a> |
                    <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.IdEspecie">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
<div class="col-md-2">
    <ul class="list-group">
        <li class="list-group-item active"><b>Espécies:</b></li>
        <li class="list-group-item"><a asp-area="" asp-controller="Especies" asp-action="Index">Espécies</a></li>
        <li class="list-group-item"><a asp-area="" asp-controller="Familias" asp-action="Index">Famílias</a></li>
        <li class="list-group-item"><a asp-area="" asp-controller="Grupos" asp-action="Index">Grupos</a></li>
    </ul>
</div>
