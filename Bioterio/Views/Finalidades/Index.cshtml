@model IEnumerable<Bioterio.Models.Finalidade>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Finalidades</h2>
<p>
    <a type="button" class="btn btn-info" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TFinalidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TFinalidade)
                </td>
                <td class="text-right">
<a class="btn btn-default" asp-action="Edit" asp-route-id="@item.IdFinalidade"><span class="glyphicon glyphicon-pencil"></span></a> |
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.IdFinalidade"><span class="glyphicon glyphicon-eye-open"></span></a> |
                    <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.IdFinalidade"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-md-12 col-md-push-1">
    <a type="button" class="btn btn-info pull-right" asp-controller="RegTratamentoes" asp-action="Index">Voltar Para Tratamentos</a>
</div>
