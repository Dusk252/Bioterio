@model Bioterio.Models.Grupo

@{
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeGrupo" class="control-label"></label>
                <input asp-for="NomeGrupo" class="form-control" />
                <span asp-validation-for="NomeGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Criar" class="btn btn-default" /> |
                <a type="button" class="btn btn-info" asp-action="Index">Voltar à listagem</a>
            </div>
        </form>
    </div>
    <div class="col-md-2 col-md-offset-6">
        <ul class="list-group">
            <li class="list-group-item active"><b>Espécies:</b></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Especies" asp-action="Create">Espécies</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Familias" asp-action="Create">Famílias</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Grupos" asp-action="Create">Grupos</a></li>
        </ul>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
