@model Bioterio.Models.RegRemocoes
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>
<h4>Registo de Remoções</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRegRemo" />
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Data de Registo" data-content="Data em que o Registo é feito"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Numero de Remoções" data-content="Numero de remoções feitas a registar"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="NroRemocoes" class="control-label"></label>
                <input asp-for="NroRemocoes" class="form-control" />
                <span asp-validation-for="NroRemocoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Motivo" data-content="Motivo que levou à remocao dos Individuos"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="MotivoIdMotivo" class="control-label"></label>
                <select asp-for="MotivoIdMotivo" class="form-control" asp-items="ViewBag.MotivoIdMotivo"></select>
                <span asp-validation-for="MotivoIdMotivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Causa da Morte" data-content="Causa de Morte dos Individuos Removidos"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="CausaMorte" class="control-label"></label>
                <input asp-for="CausaMorte" class="form-control" />
                <span asp-validation-for="CausaMorte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" data-toggle="popover" title="Codigo de Identificacao do tanque" data-content="Codigo de Identificacao do Tanque ao qual este registo vai ficar associado"><span class="glyphicon glyphicon-question-sign"></span></a>
                <label asp-for="TanqueIdTanque" class="control-label"></label>
                <select asp-for="TanqueIdTanque" class="form-control" asp-items="ViewBag.TanqueIdTanque"></select>
                <span asp-validation-for="TanqueIdTanque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Confirmar" class="btn btn-default" /> |
                <a type="button" class="btn btn-info" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
