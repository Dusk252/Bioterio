@model Bioterio.Models.Concelho

@{
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>Concelho</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeConcelho" class="control-label"></label>
                <input asp-for="NomeConcelho" class="form-control" />
                <span asp-validation-for="NomeConcelho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistritoId" class="control-label"></label>
                <select asp-for="DistritoId" class ="form-control" asp-items="ViewBag.DistritoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a type="button" class="btn btn-info" asp-action="Index">Voltar à listagem</a>
</div>

